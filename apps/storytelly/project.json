{
  "name": "storytelly",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/storytelly",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/storytelly",
        "commands": [
          "remix build",
          "mkdir -p ../../dist/apps/storytelly",
          "cp -r ./build/* ../../dist/apps/storytelly"
        ],
        "parallel": false,
        "outputPath": "dist/apps/storytelly"
      }
    },

    "serve": {
      "command": "remix dev --manual",
      "options": {
        "cwd": "apps/storytelly"
      }
    },
    "start": {
      "dependsOn": ["build"],
      "command": "remix-serve build",
      "options": {
        "cwd": "apps/storytelly"
      }
    },
    "typecheck": {
      "command": "tsc",
      "options": {
        "cwd": "apps/storytelly"
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/storytelly/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    }
  }
}
